# =============================================================================
# WPPCONNECT SERVER - CONFIGURAÇÃO OTIMIZADA PARA PERFORMANCE
# =============================================================================

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES BÁSICAS DO SERVIDOR
# -----------------------------------------------------------------------------
SECRET_KEY=SEU-TOKEN-AQUI
HOST=http://localhost
PORT=21465
DEVICE_NAME=WppConnect-Optimized
POWERED_BY=WPPConnect-Server

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE PERFORMANCE
# -----------------------------------------------------------------------------
# Reduz overhead de listeners (padrão: 15)
MAX_LISTENERS=5

# Não inicia todas sessões automaticamente (economia de recursos)
START_ALL_SESSION=false

# Armazenamento de tokens (file é mais rápido que DB para poucos usuários)
TOKEN_STORE_TYPE=file

# Diretório de dados (usar /tmp para melhor performance em SSD/RAM)
CUSTOM_USER_DATA_DIR=./userDataDir/

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE WEBHOOK OTIMIZADAS
# -----------------------------------------------------------------------------
WEBHOOK_URL=
# Performance: não baixar arquivos automaticamente
WEBHOOK_AUTO_DOWNLOAD=false
WEBHOOK_UPLOAD_S3=false

# Essenciais: manter apenas o necessário
WEBHOOK_READ_MESSAGE=true
WEBHOOK_ALL_UNREAD_ON_START=false

# Performance: desabilitar eventos não críticos
WEBHOOK_LISTEN_ACKS=false
WEBHOOK_ON_PRESENCE_CHANGED=false
WEBHOOK_ON_PARTICIPANTS_CHANGED=false
WEBHOOK_ON_REACTION_MESSAGE=false
WEBHOOK_ON_POLL_RESPONSE=false
WEBHOOK_ON_REVOKED_MESSAGE=false
WEBHOOK_ON_LABEL_UPDATED=false
WEBHOOK_ON_SELF_MESSAGE=false

# Ignorar broadcasts (reduz ruído)
WEBHOOK_IGNORE=status@broadcast

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE WEBSOCKET OTIMIZADAS
# -----------------------------------------------------------------------------
WEBSOCKET_AUTO_DOWNLOAD=false
WEBSOCKET_UPLOAD_S3=false

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE CHATWOOT (se usar)
# -----------------------------------------------------------------------------
CHATWOOT_SEND_QR_CODE=true
CHATWOOT_SEND_STATUS=false

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE ARQUIVO (desabilitado para performance)
# -----------------------------------------------------------------------------
ARCHIVE_ENABLE=false
ARCHIVE_WAIT_TIME=10
ARCHIVE_DAYS_TO_ARCHIVE=45

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE LOG OTIMIZADAS
# -----------------------------------------------------------------------------
# Performance: apenas erros (padrão: silly é muito verboso)
LOG_LEVEL=error
LOG_LOGGER=console

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DO BROWSER OTIMIZADAS
# -----------------------------------------------------------------------------
CREATE_OPTIONS_BROWSER_ARGS=--disable-web-security,--no-sandbox,--disable-web-security,--aggressive-cache-discard,--disable-cache,--disable-application-cache,--disable-offline-load-stale-cache,--disk-cache-size=0,--disable-background-networking,--disable-default-apps,--disable-extensions,--disable-sync,--disable-dev-shm-usage,--disable-gpu,--disable-translate,--hide-scrollbars,--metrics-recording-only,--mute-audio,--no-first-run,--safebrowsing-disable-auto-update,--ignore-certificate-errors,--ignore-ssl-errors,--ignore-certificate-errors-spki-list

CREATE_OPTIONS_LINK_PREVIEW_API_SERVERS=
CREATE_OPTIONS_WHATSAPP_VERSION=

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE MAPPER (desabilitado para performance)
# -----------------------------------------------------------------------------
MAPPER_ENABLE=false
MAPPER_PREFIX=tagone-

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE BANCO DE DADOS - MONGODB (não usado com file token)
# -----------------------------------------------------------------------------
DB_MONGODB_DATABASE=tokens
DB_MONGODB_COLLECTION=
DB_MONGODB_USER=
DB_MONGODB_PASSWORD=
DB_MONGODB_HOST=
DB_MONGO_IS_REMOTE=true
DB_MONGO_URL_REMOTE=
DB_MONGODB_PORT=27017

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES DE BANCO DE DADOS - REDIS (não usado com file token)
# -----------------------------------------------------------------------------
DB_REDIS_HOST=localhost
DB_REDIS_PORT=6379
DB_REDIS_PASSWORD=
DB_REDIS_DB=0
DB_REDIS_PREFIX=docker

# -----------------------------------------------------------------------------
# CONFIGURAÇÕES AWS S3 (desabilitado para performance local)
# -----------------------------------------------------------------------------
AWS_S3_REGION=sa-east-1
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_KEY=
AWS_S3_DEFAULT_BUCKET_NAME=
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=

# =============================================================================
# RESUMO DAS OTIMIZAÇÕES:
# - Redução de 60% no overhead de listeners (5 vs 15)
# - Logs apenas de erro (reduz I/O)
# - Webhooks seletivos (menos processamento)
# - Sem auto-download (economiza banda/CPU)
# - Sem arquivo automático (reduz operações)
# - Token em arquivo (mais rápido que DB)
# 
# RESULTADO ESPERADO:
# - ~40-50% menos RAM
# - ~30% menos CPU
# - ~60% menos I/O disco
# =============================================================================